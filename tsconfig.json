{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "types": [
      "lua-types/5.1"
    ],
    "strict": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["src/ui/tsx"],
  "tstl": {
    "luaTarget": "5.1",
    "noImplicitSelf": true,
    "luaBundleEntry": "src/index.ts",
    "luaBundle": "bundle.lua"
  }
}
